<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp" >
    
      <TextView
         android:id="@+id/title_confirmation"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:gravity="center"
         android:textSize="19sp"
         android:textColor="@android:color/white"
         android:layout_marginBottom="10dp"
         android:text="Registration Successful"/>
         
     <Button
         android:id="@+id/dismiss_confirmation"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/text_confirmation"
         android:background="@drawable/green_btn_default_holo_dark"
         android:text="Dismiss"
         android:textColor="@android:color/white" />

     <View
         android:id="@+id/line"
         android:layout_width="match_parent"
         android:layout_height="1dip"
         android:layout_below="@+id/title_confirmation"
         android:background="@color/red_workaholic"
         android:layout_marginBottom="7dp" />

     <TextView
         android:id="@+id/text_confirmation"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/dismiss_confirmation"
         android:layout_below="@+id/line"
         android:layout_marginBottom="7dp"
         android:gravity="center"
         android:text="Registration has been successfully completed! Continue with signing in."
         android:textColor="@android:color/white"
         android:textSize="16sp" />
 
</RelativeLayout>
